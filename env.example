# env.example
# Пример файла .env для проекта "Аренда фототехники"
# Скопируйте этот файл в .env и замените значения на реальные

# ───────────────────────────── База данных ─────────────────────────────
POSTGRES_USER=myuser
POSTGRES_PASSWORD=supersecretpassword
POSTGRES_DB=rental_db
DB_TYPE=postgresql

# ───────────────────────────── SSL и домен (для продакшена) ─────────────────────────────
DOMAIN=yourdomain.com
SSL_EMAIL=your-email@example.com

# ───────────────────────────── Секреты приложения ─────────────────────────────
SECRET_KEY=your-super-secret-key-here
CSRF_SECRET_KEY=your-csrf-secret-key-here

# ───────────────────────────── Настройки окружения ─────────────────────────────
DEBUG=true

# ───────────────────────────── Уведомления ─────────────────────────────
TELEGRAM_TOKEN=your_telegram_token_here
DEFAULT_TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ───────────────────────────── Email настройки ─────────────────────────────
YANDEX_EMAIL_SENDER=your_email@yandex.ru
YANDEX_SMTP_PASSWORD=your_smtp_password_here
